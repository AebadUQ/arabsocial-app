# ðŸ‘‡ MUST be first so CocoaPods can find RNWorklets / Reanimated specs
source 'https://cdn.cocoapods.org/'

# Resolve react_native_pods.rb with node to allow for hoisting
require Pod::Executable.execute_command('node', ['-p',
  'require.resolve(
    "react-native/scripts/react_native_pods.rb",
    {paths: [process.argv[1]]},
  )', __dir__]).strip

platform :ios, min_ios_version_supported
prepare_react_native_project!

# Always use STATIC frameworks with RN 0.81.x + Reanimated
# (dynamic can cause "runtime not ready/_WORKLET" and pod resolution issues)
use_frameworks! :linkage => :static

target 'ArabSocial' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    # An absolute path to your application root.
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    # Standard RN post_install
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false,
      # :ccache_enabled => true
    )

    # (Optional) ensure a modern iOS target if your Xcode complains
    # installer.pods_project.targets.each do |t|
    #   t.build_configurations.each do |bc|
    #     bc.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.4'
    #   end
    # end
  end
end
